{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "always"
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 300
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "DEBUG": "false",
        "LOG_LEVEL": "INFO",
        "LOG_FORMAT": "json",
        "WORKERS": "2"
      }
    },
    "staging": {
      "variables": {
        "ENVIRONMENT": "staging",
        "DEBUG": "true",
        "LOG_LEVEL": "DEBUG",
        "LOG_FORMAT": "json",
        "WORKERS": "1"
      }
    }
  },
  "regions": [
    "us-west1"
  ]
}